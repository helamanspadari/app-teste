<div class="table table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Documento</th>
                <th scope="col">E-mail</th>
                <th scope="col">Endereço</th>
                <th scope="col">Status</th>
                <th scope="col" class="text-center">Ação</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td id="idProprietario">@item.Id</td>
                    <td id="nomeProprietario">@item.Nome</td>
                    <td id="documentoProprietario">@item.Documento</td>
                    <td id="emailProprietario">@item.Email</td>
                    <td id="enderecoProprietario">@item.Endereco - @item.CEP</td>
                    <td id="statusProprietario">@(item.Status ? "Ativo" : "Inativo")</td>
                    <td class="text-center">
                        @Html.ActionLink("Editar", "SalvarProprietario", "Proprietario", new { id = item.Id }, new { @class = "btn btn-info" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>