<div class="table table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Proprietario</th>
                <th scope="col">Renavam</th>
                <th scope="col">Marca</th>
                <th scope="col">Modelo</th>
                <th scope="col">Fabricação</th>
                <th scope="col">Ano</th>
                <th scope="col">Km</th>
                <th scope="col">Valor</th>
                <th scope="col">Status</th>
                <th scope="col" class="text-center">Ação</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td id="idVeiculo">@item.Id</td>
                    <td id="proprietarioVeiculo">@item.Proprietario.Nome</td>
                    <td id="renavamVeiculo">@item.Renavam</td>
                    <td id="marcaVeiculo">@item.Marca.Nome</td>
                    <td id="modeloVeiculo">@item.Modelo</td>
                    <td id="fabricacaoVeiculo">@item.AnoFabricacao</td>
                    <td id="anoModeloVeiculo">@item.AnoModelo</td>
                    <td id="quilometragemVeiculo">@item.Quilometragem</td>
                    <td id="valorVeiculo">@item.Valor.ToString("C2")</td>
                    <td id="statusVeiculo">@((int)item.Status == 1 ? "Disponivel" : (int)item.Status == 2 ? "Indisponivel" : "Vendido")</td>
                    <td class="text-center">
                        @Html.ActionLink("Editar", "SalvarVeiculo", "Veiculo", new { id = item.Id }, new { @class = "btn btn-info" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>