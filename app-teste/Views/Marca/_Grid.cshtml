<div class="table table-responsive-md">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Status</th>
                <th scope="col" class="text-center">Ação</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td id="idMarca">@item.Id</td>
                    <td id="nomeMarca">@item.Nome</td>
                    <td id="statusMarca">@(item.Status ? "Ativo" : "Cancelado")</td>
                    <td class="text-center">
                        <a onclick="AlterarStatusMarca(@item.Id)" class="btn btn-info">
                            Alterar Status
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>